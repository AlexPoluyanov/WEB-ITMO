<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="connection" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>ru.alex.weblab3.entity.Result</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5201/studs"/>
            <property name="jakarta.persistence.jdbc.user" value="ISU"/>
            <property name="jakarta.persistence.jdbc.password" value="PASSWORD"/>
            <property name="eclipselink.ddl-generation" value="create-tables"/>
<!--            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>-->
            <property name="eclipselink.target-database" value="PostgreSQL"/>
        </properties>
    </persistence-unit>
</persistence>